#include <bits/stdc++.h>

using namespace std;
bool alegere;
int deplasament;
string sir,sirc;
ifstream f("citire.txt");
ofstream g("afisare.txt");


void citire()
{
    f>>sir;
    f>>deplasament;
    f>>alegere;
}
void afisare()
{
    g<<sirc;
}
