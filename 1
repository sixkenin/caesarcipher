#include <bits/stdc++.h>

using namespace std;
bool alegere;
int deplasament;
string sir,sirc;
ifstream f("citire.txt");
ofstream g("afisare.txt");


void citire()
{
    f>>sir;
    f>>deplasament;
    f>>alegere;
}
void afisare()
{
    g<<sirc;
}

class CaesarCipher
{
    public:
    string encrypt(string sir)
    {
        for(int i=0; i<sir.size(); i++)
        {
            sirc+=(sir[i]-'a'+deplasament)%26+'a';
        }

    }
    string decrypt(string sir)
    {
        for(int i=0; i<sir.size(); i++)
        {
            sirc+=(sir[i]-'a'-deplasament)%26+'a';
        }
    }

};

int main()
{
    citire();
    if(alegere==0)
    {
        CaesarCipher.encrypt(sir);
    }
    if(alegere==1)
    {
        CaesarCipher.decrypt(sir);
    }
    afisare();
    return 0;
}
