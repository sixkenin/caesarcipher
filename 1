class CaesarCipher
{
    string CaesarCipher::encrypt(string sir);
    {
        for(int i=0; i<sir.size(); i++)
        {
            sirc+=(sir[i]-'a'+deplasament)%26+'a';
        }

    }
    string CaesarCipher::decrypt(string sir);
    {
        for(int i=0; i<sir.size(); i++)
        {
            sirc+=(sir[i]-'a'-deplasament)%26+'a';
        }
    }


};
/*CaesarCipher( Encrypt, Decrypt, int Deplasament)
{
    encrypt()=Encrypt;
    decrypt()=Decrypt;
    deplasament=Deplasament;
}                             */

int main()
{
    citire();
    if(alegere==0)
    {
        CaesarCipher.encrypt(sir);
    }
    if(alegere==1)
    {
        CaesarCipher.decrypt(sir);
    }
    afisare();
    return 0;
}
